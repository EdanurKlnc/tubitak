<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context=".afterSearch">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#D1F2EB"
        android:id="@+id/containercard"
        android:layout_width="413dp"
        android:layout_height="215dp"
        app:cardCornerRadius="100dp"
        app:circularflow_radiusInDP="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yolculuklar"
        app:layout_constraintVertical_bias="0.0">

        <androidx.cardview.widget.CardView
            android:id="@+id/profileCard"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="100dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/ilanAd"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="10dp"
            android:autoSizeTextType="uniform"
            android:text="İlan Sahibi"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ilanNerden"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="50dp"
            android:text="Nereden"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ilanNereye"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="50dp"
            android:text="Nereye"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="100dp"
            android:text="Tarih"
            android:textSize="20sp" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/yolculuklar"
        android:layout_width="418dp"
        android:layout_height="61dp"
        android:enabled="false"
        android:text="Bulunan Yolculuklar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#D1F2EB"
        android:id="@+id/containercard2"
        android:layout_width="413dp"
        android:layout_height="215dp"
        app:cardCornerRadius="100dp"
        android:layout_marginTop="225dp"
        app:circularflow_radiusInDP="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yolculuklar"
        app:layout_constraintVertical_bias="0.0">

        <androidx.cardview.widget.CardView
            android:id="@+id/profileCard2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="100dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/ilanAd2"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="10dp"
            android:autoSizeTextType="uniform"
            android:text="İlan Sahibi"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ilanNerden2"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="50dp"
            android:text="Nereden"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ilanNereye2"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="50dp"
            android:textSize="20sp"
            android:text="Nereye" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="100dp"
            android:textSize="20sp"
            android:text="Tarih" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>